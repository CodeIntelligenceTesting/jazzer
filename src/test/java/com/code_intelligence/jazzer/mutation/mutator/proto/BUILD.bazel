    name = "proto3_proto",
    srcs = ["proto3.proto"],
    deps = [
        "@com_google_protobuf//:any_proto",
    ],
)

java_proto_library(
    name = "proto3_java_proto",
    testonly = True,
    visibility = ["//src/test/java/com/code_intelligence/jazzer/mutation/mutator:__pkg__"],
    deps = [":proto3_proto"],
