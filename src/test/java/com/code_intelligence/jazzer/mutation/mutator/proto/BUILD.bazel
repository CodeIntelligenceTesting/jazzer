proto_library(
    name = "proto2_proto",
    srcs = ["proto2.proto"],
)

java_proto_library(
    name = "proto2_java_proto",
    testonly = True,
    visibility = [
        "//src/test/java/com/code_intelligence/jazzer/mutation/mutator:__pkg__",
