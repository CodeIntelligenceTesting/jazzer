kt_jvm_library(
    name = "kotlin_strategies",
    srcs = ["DirectByteBufferStrategy.kt"],
    deps = [
        "//agent/src/main/java/com/code_intelligence/jazzer/instrumentor",
        "@jazzer_jacoco//:jacoco_internal",
        "@org_ow2_asm_asm//jar",
