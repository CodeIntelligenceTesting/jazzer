load("@rules_jvm_external//:defs.bzl", "javadoc", "java_export")
load("//:maven.bzl", "JAZZER_API_COORDINATES")

java_library(
    name = "api",
    srcs = glob(["*.java"]),
    visibility = ["//visibility:public"],
)

javadoc(
    name = "api_javadoc",
    deps = [":api"],
)

java_export(
    name = "api_export",
    srcs = glob(["*.java"]),
    maven_coordinates = JAZZER_API_COORDINATES,
    pom_template = "//:jazzer-api.pom",
    visibility = ["//visibility:public"],
)
